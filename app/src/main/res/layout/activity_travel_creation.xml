<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TravelCreationActivity">

    <EditText
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Title"
            android:ems="10"
            android:id="@+id/titleeditText" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="10dp" android:layout_marginTop="120dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titletextView" android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/titleeditText"
            app:layout_constraintStart_toStartOf="@+id/titleeditText"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" tools:srcCompat="@tools:sample/backgrounds/scenic"
            android:id="@+id/imageView" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="300dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="84dp" tools:layout_editor_absoluteX="8dp"
            android:id="@+id/linearButton" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp">
        <Button
                android:text="@android:string/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/cancel" android:layout_weight="1"/>
        <Button
                android:text="Confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/confirm" android:layout_weight="1"
                android:onClick="onConfirmTouched"/>
    </LinearLayout>
    <TextView
            android:text="Place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/placetextView"
            app:layout_constraintBottom_toTopOf="@+id/placeeditText" android:layout_marginBottom="10dp"
            app:layout_constraintStart_toStartOf="@+id/placeeditText"/>
    <EditText
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Place"
            android:ems="10"
            android:id="@+id/placeeditText" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="10dp"
            app:layout_constraintTop_toTopOf="@+id/titleeditText"/>
    <EditText
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/enddateeditText"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="220dp"
            android:layout_marginTop="50dp" app:layout_constraintTop_toBottomOf="@+id/titleeditText"/>
    <EditText
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/startdateeditText"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp" app:layout_constraintTop_toBottomOf="@+id/titleeditText"/>
    <TextView
            android:text="Start Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/startdatetextView"
            app:layout_constraintStart_toStartOf="@+id/startdateeditText" android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/startdateeditText"/>
    <TextView
            android:text="End Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/enddatetextView"
            app:layout_constraintBottom_toTopOf="@+id/enddateeditText" android:layout_marginBottom="10dp"
            app:layout_constraintStart_toStartOf="@+id/enddateeditText"/>
    <TextView
            android:text="Travel Creation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titleviewtextView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" android:layout_marginTop="20dp" app:layout_constraintTop_toTopOf="parent"
            android:textSize="36sp"/>
</android.support.constraint.ConstraintLayout>